{#
 * Template: partials/moduleHighlightedCourse.html.twig
 *
 * @param Contentful\Delivery\DynamicEntry course
 #}

 <div class="module module-highlighted-course">
    <div class="module-highlighted-course__wrapper" style="background-image: url('{{ course.getImage().getFile().getUrl() }}');">
        <div class="module-highlighted-course__overlay"></div>

        <div class="module-highlighted-course__content">
            {% if course.getCategories() %}
                <div class="module-highlighted-course__categories">
                    {% for category in course.getCategories() %}
                        <a href="{{ path('category', {categorySlug: category.getSlug()}) ~ state.queryString }}" class="module-highlighted-course__category">{{ category.getTitle() }}</a>
                    {% endfor %}
                </div>
            {% endif %}

            <h2 class="module-highlighted-course__title">
                <a href="{{ path('course', {courseSlug: course.getSlug()}) ~ state.queryString }}">{{ course.getTitle() }}</a>
            </h2>

            <div class="module-highlighted-course__description-wrapper">
                <p>{{ course.getShortDescription()|markdown }}</p>
            </div>

            <div class="module-highlighted-course__link-wrapper">
                <a href="{{ path('course', {courseSlug: course.getSlug()}) ~ state.queryString }}" class="module-highlighted-course__link">{{ 'viewCourseLabel'|trans }}</a>
            </div>
        </div>
    </div>
</div>
